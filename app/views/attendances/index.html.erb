<p id="notice"><%= notice %></p>

<h1>Attendance</h1>

<table>
  <thead>
    <tr>
      <th>Meeting</th>
      <th>Member</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        
        <td><%= meeting.where(id: attendance.Meeting_id).last.Meeting_title %></td>
        <td><%= member.where(id: attendance.Mem_id).last.Mem_name %></td>
        <td><%= attendance.Att_time %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

